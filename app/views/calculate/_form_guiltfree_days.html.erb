<%= form_tag("/days", method: :get) do %>
  <%= label_tag(:days, "Klachten vrije dagen (=<6):") %>
  <%= text_field_tag(:days) %><br>
  <%= label_tag(:probability, "Kans op geen klachten (0 <= x <= 1)[begint met een punt!]:") %>
  <%= text_field_tag(:probability) %><br>
  <%= submit_tag("Bereken") %>
<% end %>
